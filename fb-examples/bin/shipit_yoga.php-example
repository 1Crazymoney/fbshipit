namespace Facebook\ShipIt;

require_once(__DIR__.'/../autoload.php');


final class ShipItYoga extends FBShipItCLI {
  const string ROOT = 'fbobjc/xplat/yoga/';

  <<__Override>>
  protected static function projectFilterChangeset(
    ShipItChangeset $changeset,
  ): ShipItChangeset {
    return $changeset
      |> FBCommonFilters::applyAll($$, shape(
            'stripCommonFiles/exceptions' => ImmVector {
              '/BUCK/',
            },
          ),
        )
      |> ShipItPathFilters::moveDirectories($$, static::getPathMappings());
  }

  <<__Override>>
  public static function getPathMappings(): ImmMap<string, string> {
    return ImmMap {
      self::ROOT => '',
    };
  }

  <<__Override>>
  public static function getStaticConfig(): FBShipItCLIStaticConfig {
    return shape(
      'internalRepo' => 'fbsource',
      'githubOrg' => 'facebook',
      'githubProject' => 'yoga',
      'sourceRoots' => ImmSet {
        self::ROOT,
      },
    );
  }
}

// Allow require() from unit test
if (isset($argv[0]) && realpath($argv[0]) === realpath(__FILE__)) {
  ShipItYoga::cliMain();
}
