namespace Facebook\ShipIt\Config;

use \Facebook\ShipIt\ {
  FBShipItCLIStaticConfig,
  FBShipItConfig,
};

final class FacebookFlipper extends FBShipItConfig {
  <<__Override>>
  public static function getDefaultPathMappings(): ImmMap<string, string> {
    return ImmMap {
      'xplat/sonar/' => '',
      'fbobjc/Libraries/FBCxxUtils/FBCxxUtils/' => 'iOS/SonarKit/FBCxxUtils/',
    };
  }

  <<__Override>>
protected static function getStripCommonFilesExceptions(): ImmVector<string> {
  return ImmVector {
    '@(^|/)fb(/|$)@',
  };
}

  <<__Override>>
  protected static function getDefaultStrippedFiles(): ImmVector<string> {
    return ImmVector {
      '@xplat/sonar/src/fb[/|$]@',
      '@xplat/sonar/iOS/SonarKit/FBCxxUtils[/|$]@',
      '@xplat/sonar/iOS/Plugins/Facebook[/|$]@',
      '@xplat/sonar/scripts/sandcastle-build.sh@',
      '@xplat/sonar/third-party[/|$]@',
    };
  }

  <<__Override>>
  public static function getStaticConfig(): FBShipItCLIStaticConfig {
    return shape(
      'internalRepo' => 'fbsource',
      'githubOrg' => 'facebook',
      'githubProject' => 'flipper',
    );
  }
}
